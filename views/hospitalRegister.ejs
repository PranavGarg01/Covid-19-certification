<div class="container">
<h2>Hospital Registeration Form</h2>
<form class="form-horizontal" action="#">
  <div class="form-group">
    <label class="control-label col-sm-2" >Name:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" placeholder="Enter Name" name="username">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2">password</label>
    <div class="col-sm-10">          
      <input type="text" class="form-control" id="pwd" placeholder="password" name="password">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2">Private Key:</label>
    <div class="col-sm-10">          
      <input type="text" class="form-control" id="privKey" placeholder="Private key" name="privKey">
    </div>
  </div>
  
  <div class="form-group">        
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>Private Key<h4 id="privateKeyDisplay"></h4></label>
        <label>Public Key<h4 id="publicKeyDisplay"></h4></label>
      </div>
    </div>
  </div>
  
  <div class="form-group">        
    <div class="col-sm-offset-2 col-sm-10">
      <!-- below is the submit button-->
      <button type="button" onclick="regWithKeys()" class="btn btn-default">Register and use my own keys</button>
      <button type="button" onclick="regNew()" class="btn btn-default">Register and create new keys</button>
    </div>
  </div>
</form>
</div>

  